{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node -r ts-node/register ./src/server.ts",
    "start:watch": "nodemon",
    "clean": "rm -rf dist",
    "codegen": "graphql-codegen",
    "build": "npm run clean && npm run codegen && tsc && cp src/schema.graphql dist"
  },
  "nodemonConfig": {
    "ignore": [
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "author": "Jannis Isensee",
  "license": "MIT",
  "dependencies": {
    "@types/express": "^4.17.9",
    "apollo-datasource-mongodb": "^0.3.2",
    "apollo-server-express": "^2.19.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "mongodb": "^3.6.6"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.4",
    "@graphql-codegen/typescript": "^1.22.0",
    "@types/node": "^14.14.7",
    "graphql-import-node": "^0.0.4",
    "graphql-tools": "^4.0.8",
    "nodemon": "^2.0.6",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
